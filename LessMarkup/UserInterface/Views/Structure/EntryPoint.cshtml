    @Html.Partial("~/Views/Structure/InputFormTemplate.cshtml")
</head>
<body>
    @Html.Partial("~/Views/Structure/Body.cshtml")
    @Scripts.Render("~/Scripts/UserInterface/jquery-2.1.1.js")
