    @Scripts.Render("~/Scripts/UserInterface/hubs.js")
    @Scripts.Render("~/Scripts/UserInterface/spin.js")
    @Scripts.Render("~/Scripts/UserInterface/angular-spinner.js")
    @Scripts.Render("~/Scripts/UserInterface/codemirror.js")
    @Scripts.Render("~/Scripts/UserInterface/ui-codemirror.js")
    <script>
        window.tinyMceThemePath = "@Url.Content("~/Scripts/UserInterface/Tinymce/tinymce-theme.js")";
        window.tinyMceSkinPath = "@Url.Content("~/Content/UserInterface/Tinymce")";
        window.viewInitialData = @Html.Raw(Model.InitialData);
    </script>
    @Scripts.Render("~/Scripts/UserInterface/application.js")
    @Scripts.Render("~/Scripts/UserInterface/viewhandler.js")
    @Scripts.Render("~/Scripts/UserInterface/command-handler.js")
    @Scripts.Render("~/Scripts/UserInterface/inputform.js")
    @Scripts.Render("~/Scripts/UserInterface/recordlist.js")
    @Scripts.Render("~/Scripts/UserInterface/configuration.js")
    @Scripts.Render("~/Scripts/UserInterface/nodelist.js")
</body>
</html>
